!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title= @page_title
    = csrf_meta_tags
    = csp_meta_tag

    %link{href: "https://fonts.googleapis.com/css?family=Lato|Roboto+Slab", rel: "stylesheet"}
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no"}
    %meta{name: "keywords", content: @seo_keywords}
      
    = favicon_link_tag 'favicons/favicon.ico'
    = stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render "shared/blog_nav"
    = render "shared/blog_header"
    %main.container{role: "main"}
      .row
        = yield
        = render "shared/blog_sidebar"
      = render "shared/blog_footer"
      = alerts
      = source_helper "blog"
