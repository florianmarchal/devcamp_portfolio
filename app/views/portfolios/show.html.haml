.container.portfolio-container
  .row
    .col-md-7
      = image_tag portfolio_img(@portfolio_item.main_image, 'main'), width: '100%' unless @portfolio_item.main_image.nil?
    .col-md-5
      %h1= @portfolio_item.title
      %hr
      %em= @portfolio_item.subtitle
      %p= @portfolio_item.body
      %h3 Technologies used
      - @portfolio_item.technologies.each do |t|
        %p= t.name
      - if logged_in?(:site_admin)
        %div
          = link_to 'Edit', edit_portfolio_path(@portfolio_item), class: 'btn btn-warning'