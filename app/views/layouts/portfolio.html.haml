!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title= @page_title
    = csrf_meta_tags
    = csp_meta_tag

    %link{href: "https://fonts.googleapis.com/css?family=Lato|Roboto+Slab", rel: "stylesheet"}
    %meta{name: "keywords", content: @seo_keywords }
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no"}

    = favicon_link_tag 'favicons/favicon.ico'
    = stylesheet_link_tag    'portfolios', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = render "shared/portfolio_nav"
    %main{role: "main"}
      = render "shared/portfolio_header" unless logged_in?(:site_admin)
      = yield
    = render "shared/portfolio_footer"
    = alerts
