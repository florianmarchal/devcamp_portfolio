.container.portfolio-container
  .row
    .col-md-7
      = image_tag @portfolio_item.main_image.to_s, width: '100%' unless @portfolio_item.main_image.nil?
    .col-md-5
      %h1= @portfolio_item.title
      %hr
      %em= @portfolio_item.subtitle
      %p= @portfolio_item.body
      %h3 Technologies used
      - @portfolio_item.technologies.each do |t|
        %p= t.name